    <changeSet author="fcolucas" id="20200423120222-1">
        <createTable tableName="projeto_contrapartida">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="projeto_contrapartidaPK"/>
            </column>
            <column name="cargo" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="perfil" type="VARCHAR(255)"/>
            <column name="perfil_id" type="BIGINT"/>
            <column name="remuneracao" type="numeric(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="contrato_info_id" type="BIGINT"/>
            <column name="pessoa_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    
    <changeSet author="fcolucas" id="20200423120222-2">
        <createTable tableName="projeto_contrapartida_map">
            <column name="versao" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="projeto_contrapartida_mapPK"/>
            </column>
            <column name="contrapartida_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="projeto_contrapartida_mapPK"/>
            </column>
            <column name="projeto_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="projeto_contrapartida_mapPK"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet author="fcolucas" id="20200423120222-3">
        <addColumn tableName="projeto_historico">
            <column name="contrapartida_ifce" type="int4"/>
        </addColumn>
    </changeSet>
    
    <changeSet author="fcolucas" id="20200423120222-4">
