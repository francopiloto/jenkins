            </column>
            <column name="vinculo_externo" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="pessoa_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="titulacao_id" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
