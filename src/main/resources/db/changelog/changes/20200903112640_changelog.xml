            </column>
            <column name="aporte" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="fonte_recurso_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="item" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="macroentrega" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="0" name="ordem" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="valor" type="numeric(19, 2)"/>
        </createTable>
    </changeSet>
    
    <changeSet author="fcolucas" id="20200903112640-2">
    	<preConditions onFail="MARK_RAN">
