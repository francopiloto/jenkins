                <constraints primaryKey="true" primaryKeyName="projeto_plano_aportePK"/>
            </column>
            <column name="data" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="mes_execucao" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="0" name="ordem" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="parte_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="valor" type="numeric(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="aportes_id" type="BIGINT"/>
            <column name="projeto_plano_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet author="matheusholandamatos" id="20200622080250-2">
